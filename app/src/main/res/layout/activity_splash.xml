<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/activity_splash"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/icon_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" android:layout_centerInParent="true" />
    <TextView android:textSize="24sp" android:textStyle="bold"
        android:textColor="@color/colorSplash"
        android:id="@+id/app_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="15dp" android:text="@string/app_name"
        android:layout_below="@+id/icon_ic" android:layout_centerHorizontal="true" />
</RelativeLayout>
